---
import acteck from "../assets/logos/acteck.png";
import asrock from "../assets/logos/asrock.png";
import intel from "../assets/logos/intel.svg";
import kingston from "../assets/logos/kingston.png";
import amd from "../assets/logos/amd.png";
import tplink from "../assets/logos/tplink.png";
import Image from "astro/components/Image.astro";

const logos = [
    {
        src: acteck,
        alt: "Acteck Logo",
    },
    {
        src: asrock,
        alt: "Asrock Logo",
    },
    {
        src: intel,
        alt: "Intel Logo",
    },
    {
        src: kingston,
        alt: "Kingston Logo",
    },
    {
        src: amd,
        alt: "AMD Logo",
    },
    {
        src: tplink,
        alt: "TP-Link Logo",
    },
];
---

<div class="relative w-full overflow-hidden py-15">
    <div
        class="pointer-events-none absolute left-0 top-0 h-full w-150 bg-gradient-to-r from-white to-transparent z-10"
    >
    </div>
    <div
        class="pointer-events-none absolute right-0 top-0 h-full w-150 bg-gradient-to-l from-white to-transparent z-10"
    >
    </div>

    <!-- Track -->
    <div class="flex w-max items-center gap-16 animate-scroll">
        {
            [...logos, ...logos].map((logo) => (
                <Image
                    src={logo.src}
                    alt={logo.alt}
                    class="h-8 w-auto object-contain transition"
                />
            ))
        }
    </div>
</div>

<style>
    @keyframes scroll {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(-50%);
        }
    }

    .animate-scroll {
        animation: scroll 30s linear infinite;
    }
</style>
